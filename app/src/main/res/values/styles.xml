<resources>

    <!-- @author Shamil Gradov -->
    <!-- @author Maximilian Grabau -->
    <!-- @author Hannes Hoffmann -->

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/tryoutorange</item>
        <item name="colorPrimaryDark">@color/barfilling</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorHint">@color/textWhite</item>
        <item name="android:colorBackground">@color/welcome2</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.Button" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textColor">@color/textWhite</item>
        <item name="android:text">@string/weiter</item>
        <item name="background">@drawable/roundedbutton</item>
        <item name="backgroundTint">@color/tryoutorange</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/textSize_small</item>
        <item name="android:fontFamily">@font/bernierregular</item>
    </style>

</resources>
